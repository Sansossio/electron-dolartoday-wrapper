{
  "name": "electron-dolartoday-wrapper",
  "version": "0.0.1",
  "description": "Dolartoday api wrapper. This is a simple electron app example",
  "main": "app/index.js",
  "homepage": "./",
  "scripts": {
    "test": "jest",
    "build": "rm -Rf dist && npm run build:react && npm run build:electron",
    "build:tsc": "tsc",
    "build:electron": "rm -Rf app && npm run build:tsc && electron-builder",
    "build:react": "rm -Rf build && webpack --mode production",
    "start:electron": "electron src/main.js",
    "start:react": "webpack-dev-server  --mode development --inline --hot",
    "start": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "lint": "standard",
    "lint:fix": "standard --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sansossio/electron-dolartoday-wrapper.git"
  },
  "author": "Julio Sansossio",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Sansossio/electron-dolartoday-wrapper/issues"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "electron-is-dev": "^1.2.0",
    "moment": "^2.24.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@types/axios": "^0.14.0",
    "@types/jest": "^25.2.1",
    "@types/moment": "^2.13.0",
    "@types/react": "^16.9.34",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.2",
    "electron": "^15.5.5",
    "electron-builder": "^22.4.1",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.2.0",
    "jest": "^25.3.0",
    "mini-css-extract-plugin": "^0.9.0",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2",
    "standard": "^14.3.3",
    "style-loader": "^1.1.4",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "tslint": "^6.1.1",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.8.3",
    "wait-on": "^4.0.2",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "build": {
    "files": [
      "app/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
